---
import BaseLayout from '@layouts/BaseLayout.astro';
import Tag from '@components/Tag.astro';
---

<BaseLayout pageTitle="Home | Omri Green">
  <section class="text-center flex flex-col gap-10">
    <h1 class="text-4xl whitespace-nowrap md:text-5xl">
      Hi, I'm <span class="font-bold"
        >Omri <span class="text-primary-400">Green</span>
      </span>
    </h1>
    <img
      src="/assets/profile.jpg"
      alt="profile"
      class="rounded-full w-80 shadow border-2 border-neutral-400 mx-auto"
    />
    <p class="text-xl">
      A frontend software devleoper, passionate about all-things web dev. 👨🏻‍💻
    </p>
  </section>
  <section class="flex flex-col gap-5 items-center text-center">
    <h2 class="text-2xl text-center">Read My Blog:</h2>
    <ul class="font-bold text-lg grid grid-cols-3 gap-3">
      <li>
        <Tag type="react" />
      </li>
      <li>
        <Tag type="javascript" />
      </li>
      <li>
        <Tag type="typescript" />
      </li>
      <li>
        <Tag type="nextjs" />
      </li>
      <li>
        <Tag type="astro" />
      </li>
      <li>
        <Tag type="css" />
      </li>
      <li>
        <Tag type="tailwind" />
      </li>
      <li>
        <Tag type="nodejs" />
      </li>
    </ul>
  </section>
</BaseLayout>
