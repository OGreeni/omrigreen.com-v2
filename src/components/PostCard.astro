---
interface Props {
  url: string;
  title: string;
  description: string;
  tags: string[];
}

const { url, title, description, tags } = Astro.props;
---

<li
  class="bg-[#f6f6f6] p-5 rounded-md shadow hover:border-4 border-primary-400 transition-all"
>
  <a href={url} class="font-bold text-xl">{title}</a>
  <p>{description}</p>
  <p>{JSON.stringify(tags)}</p>
</li>
