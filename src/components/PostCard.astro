---
import Tag from '@components/Tag.astro';
import { formatDateString } from '@utils/dates';
interface Props {
  frontmatter: Frontmatter;
}
const { frontmatter, url } = Astro.props;
const formattedDate = formatDateString(frontmatter.pubDate);
---

<li
  class="bg-[#f6f6f6] p-5 rounded-md shadow hover:border-4 border-primary-400 transition-all dark:bg-zinc-800"
>
  <a href={url}>
    <p class="font-bold text-xl">{frontmatter.title}</p>
    <p class="text-primary-400 font-bold">{formattedDate}</p>
    <p>{frontmatter.description}</p>
    <ul class="font-bold">
      {
        frontmatter.tags.map((tag) => (
          <li class="inline">
            <Tag type={tag} />
          </li>
        ))
      }
    </ul>
  </a>
</li>
